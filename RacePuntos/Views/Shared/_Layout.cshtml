<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - RacePuntos</title>
    @*JS*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/alertify.js"></script>
    <script src="~/Scripts/alertify.min.js"></script>
    <script src="~/Scripts/jquery.tooltipster.js"></script>
    <script src="~/Scripts/jquery.tooltipster.min.js"></script>
    <script src="~/Scripts/Validations.js"></script>

    @*CSS*@
    <link href="~/Content/alertify.core.css" rel="stylesheet" />
    <link href="~/Content/alertify.default.css" rel="stylesheet" />
    <link href="~/Content/tooltipster.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("RacePuntos", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Quienes Somos<span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Misión", "", "")</li>
                            <li>@Html.ActionLink("Visión", "", "")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Puntos<span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Historial adquisición de puntos", "", "")</li>
                            <li>@Html.ActionLink("Historial de servicios redimidos", "", "")</li>
                        </ul>
                    </li>
                    <li class="dropdown-toggle">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Gestión<span class="glyphicon glyphicon-chevron-down" aria-hidden="true"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("usuarios", "", "")</li>
                            <li>@Html.ActionLink("servicios - redimir puntos", "", "")</li>
                        </ul>
                    </li>

                    @*<li>@Html.ActionLink("Quienes Somos", "QuienesSomos", "Home")</li>
                        <li>@Html.ActionLink("Puntos", "Puntos", "Home")</li>
                        <li>@Html.ActionLink("Getión", "Gestion", "Home")</li>*@
                    <li>@Html.ActionLink("Ayuda", "Ayuda", "Home")</li>
                    <li>@Html.ActionLink("Contactenos", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Inpahu - RacePuntos</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
